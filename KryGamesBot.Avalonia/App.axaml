<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="KryGamesBot.Ava.App"
             xmlns:local="using:KryGamesBot.Ava"
             xmlns:converters="using:KryGamesBot.Ava.Converters"
             RequestedThemeVariant="Default"

             xmlns:actipro="http://schemas.actiprosoftware.com/avaloniaui"
             >
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://KryGamesBot.Ava/Assets/Lang/en-US.axaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Application.Resources>
    <Application.Styles>
        <FluentTheme DensityStyle="Normal" />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
        <actipro:ModernTheme Includes="NativeDataGrid, Pro" />
    </Application.Styles>
</Application>