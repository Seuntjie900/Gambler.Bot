<Window xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KryGamesBot.Avalonia.Views.Common.LoginView"
			 xmlns:vm="using:KryGamesBot.Avalonia.ViewModels.Common"
			 x:DataType="vm:LoginViewModel"
			 >

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
		</Grid.RowDefinitions>
		<StackPanel x:Name="stkLoginControls" Grid.Row="0">

		</StackPanel>
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Margin="5" Content="Login" Command="{Binding LoginCommand}" />
			<Button Margin="5" Content="Cancel" Command="{Binding CancelCommand}" />
			<Button Margin="5" Content="Skip" Command="{Binding SkipCommand}" />
		</StackPanel>
	</Grid>
</Window>
