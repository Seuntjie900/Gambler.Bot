<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KryGamesBot.Ava.Views.MainView"
			 xmlns:views="using:KryGamesBot.Ava.Views"
			 xmlns:vm="using:KryGamesBot.Ava.ViewModels"
			 x:DataType="vm:MainViewModel"
			 >

	<Grid>
		<Grid.RowDefinitions>			
			<RowDefinition Height="*"></RowDefinition>
		</Grid.RowDefinitions>
		<WebView x:Name="wvBypass" Grid.Row="0" IsVisible="false" />

		<ContentControl Content="{Binding Instance}">
			<ContentControl.DataTemplates>
				<DataTemplate DataType="vm:InstanceViewModel">
					<views:InstanceView/>
				</DataTemplate>
			</ContentControl.DataTemplates>
		</ContentControl>
	
</Grid>
</UserControl>
