@using DoormatBot.Helpers;

<h3>AdvancedSettings</h3>
<div>
<h4>Auto Withdraw/Tip</h4>
<h5>Upper Limit"</h5>
<div class="settingContainer">
    <DxCheckBox CssClass="settingEdit" @bind-Checked="@BetSettings.EnableUpperLimit" Text="Auto Withdraw" />
    <DxComboBox CssClass="settingEdit" Data="Actions" @bind-Value="BetSettings.UpperLimitAction">
                        
</DxComboBox>
when
    <DxComboBox CssClass="settingEdit" Data="Compares" @bind-Value="BetSettings.UpperLimitCompare">

</DxComboBox>
>
    <DxSpinEdit CssClass="settingEdit" @bind-Value="BetSettings.UpperLimit" />
</div>
<div class="settingContainer">
Amount
    <DxSpinEdit CssClass="settingEdit" @bind-Value="BetSettings.UpperLimitActionAmount" Enabled="@(BetSettings.UpperLimitAction!= InternalBetSettings.LimitAction.Stop)" />
</div>
<div class="settingContainer">
Address/User
    <DxTextBox CssClass="settingEdit" @bind-Value="BetSettings.UpperLimitAddress" Enabled="@(BetSettings.UpperLimitAction!= InternalBetSettings.LimitAction.Stop)" />
</div>
<h5>Lower Limit"</h5>
           
<div class="settingContainer">
    <DxCheckBox CssClass="settingEdit" @bind-Checked="@BetSettings.EnableLowerLimit" Text="Auto Withdraw" />
    <DxComboBox CssClass="settingEdit" Data="Actions" @bind-Value="BetSettings.LowerLimitAction">

</DxComboBox>
when
    <DxComboBox CssClass="settingEdit" Data="Compares" @bind-Value="BetSettings.LowerLimitCompare">

</DxComboBox>
>
    <DxSpinEdit CssClass="settingEdit"  @bind-Value="BetSettings.LowerLimit" />
</div>
                
<div class="settingContainer">
Amount
    <DxSpinEdit CssClass="settingEdit" @bind-Value="BetSettings.LowerLimitActionAmount" Enabled="@(BetSettings.LowerLimitAction!= InternalBetSettings.LimitAction.Stop)" />
</div>
                
<div class="settingContainer">
Address/User
    <DxTextBox CssClass="settingEdit" @bind-Value="BetSettings.LowerLimitAddress" Enabled="@(BetSettings.LowerLimitAction!= InternalBetSettings.LimitAction.Stop)" />
</div>
      
<h4>Reset Seed</h4>
    
<div class="settingContainer">
    <DxCheckBox CssClass="settingEdit" @bind-Checked="@BetSettings.EnableResetSeedBets" Text="Auto Withdraw" />
Reset after every
    <DxSpinEdit CssClass="settingEdit" @bind-Value="BetSettings.ResetSeedBets" Enabled="@(BetSettings.LowerLimitAction!= InternalBetSettings.LimitAction.Stop)" />
Bets

</div>
            
<div class="settingContainer">
    <DxCheckBox CssClass="settingEdit" @bind-Checked="@BetSettings.EnableResetSeedWins" Text="Auto Withdraw" />
Reset after every
    <DxSpinEdit CssClass="settingEdit" @bind-Value="BetSettings.ResetSeedWins" Enabled="@(BetSettings.LowerLimitAction!= InternalBetSettings.LimitAction.Stop)" />
    Wins
</div>
           
<div class="settingContainer">
    <DxCheckBox CssClass="settingEdit" @bind-Checked="@BetSettings.EnableResetSeedWinStreak" Text="Auto Withdraw" />
Reset after every
    <DxSpinEdit CssClass="settingEdit" @bind-Value="BetSettings.ResetSeedWinStreak" Enabled="@(BetSettings.LowerLimitAction!= InternalBetSettings.LimitAction.Stop)" />
    Wins in a row
</div>
           
<div class="settingContainer">
    <DxCheckBox CssClass="settingEdit" @bind-Checked="@BetSettings.EnableResetSeedLosses" Text="Auto Withdraw" />
Reset after every
    <DxSpinEdit CssClass="settingEdit" @bind-Value="BetSettings.ResetSeedLosses" Enabled="@(BetSettings.LowerLimitAction!= InternalBetSettings.LimitAction.Stop)" />
    Losses
</div>
            
<div class="settingContainer">
    <DxCheckBox CssClass="settingEdit" @bind-Checked="@BetSettings.EnableResetSeedLossStreak" Text="Auto Withdraw" />
Reset after every
    <DxSpinEdit CssClass="settingEdit" @bind-Value="BetSettings.ResetSeedLossStreak" Enabled="@(BetSettings.LowerLimitAction!= InternalBetSettings.LimitAction.Stop)" />
    Losses in a row
</div>
            
<div class="settingContainer">
    <DxCheckBox CssClass="settingEdit" @bind-Checked="@BetSettings.EnableResetSeedProfit" Text="Auto Withdraw" />
Reset after every
    <DxSpinEdit CssClass="settingEdit" @bind-Value="BetSettings.ResetSeedProfit" Enabled="@(BetSettings.LowerLimitAction!= InternalBetSettings.LimitAction.Stop)" />
Profit
</div>
           
<div class="settingContainer">
    <DxCheckBox CssClass="settingEdit" @bind-Checked="@BetSettings.EnableResetSeedLoss" Text="Auto Withdraw" />
Reset after every
    <DxSpinEdit CssClass="settingEdit" @bind-Value="BetSettings.ResetSeedLoss" Enabled="@(BetSettings.LowerLimitAction!= InternalBetSettings.LimitAction.Stop)" />
    Loss
</div>
<h4>Bot Speed</h4>
    
        
<div class="settingContainer">
    <DxCheckBox CssClass="settingEdit" @bind-Checked="@BetSettings.EnableBotSpeed" Text="Auto Withdraw" />
Bot Speed
    <DxSpinEdit CssClass="settingEdit" @bind-Value="BetSettings.BotSpeed" Enabled="@(BetSettings.LowerLimitAction!= InternalBetSettings.LimitAction.Stop)" />
Bets per second
                
</div>
<p>
    By default, the bot bets as fast as it can. The bot speed setting should only be enabled if you intend to slow down the betting speed or if you are getting errors from the site.
</p>
          
</div>
@code {
    [Parameter]
    public InternalBetSettings BetSettings { get; set; }

    List<string> Actions = new List<string> { "Withdraw", "Tip", "Stop" };
    List<string> Compares = new List<string> { "Profit", "Balance" };

    public AdvancedSettings()
    {
        
    }


}
