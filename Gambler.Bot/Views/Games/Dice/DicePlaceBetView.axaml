<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Gambler.Bot.Views.Games.Dice.DicePlaceBetView"
             xmlns:vm="using:Gambler.Bot.ViewModels.Games.Dice" 
             x:DataType="vm:DicePlaceBetViewModel">
  <Grid ColumnDefinitions="*,2*,*" RowDefinitions="*,*,*,*">
    <TextBlock IsVisible="{Binding ShowAmount}" Grid.Column="0" Grid.Row="0" >Bet</TextBlock>
    <TextBlock IsVisible="{Binding ShowChance}" Grid.Column="0" Grid.Row="1" >Chance</TextBlock>
    <TextBlock IsVisible="{Binding ShowChance}" Grid.Column="0" Grid.Row="2" >Payout</TextBlock>
    <TextBlock IsVisible="{Binding ShowAmount}"  Grid.Column="0" Grid.Row="3" >Profit</TextBlock>
    <NumericUpDown IsVisible="{Binding ShowAmount}" Value="{Binding Amount}" Minimum="0" Maximum="9999999999" Grid.Column="1" Grid.Row="0" FormatString="n8" />
    <NumericUpDown IsVisible="{Binding ShowChance}" Value="{Binding Chance}" Minimum="0" Maximum="99.9999" Grid.Column="1" Grid.Row="1" FormatString="n5"/>
    <NumericUpDown IsVisible="{Binding ShowChance}" Value="{Binding Payout}" Minimum="0" Maximum="9999999999" Grid.Column="1" Grid.Row="2" FormatString="n8"/>
    <NumericUpDown IsVisible="{Binding ShowAmount}"  Value="{Binding Profit}" Minimum="0" Maximum="9999999999" Grid.Column="1" Grid.Row="3" FormatString="n8"/>
    <Button IsVisible="{Binding ShowButton}"  Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Content="Bet High" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Stretch" Command="{Binding BetHighCommand}"/>
    <Button IsVisible="{Binding ShowButton}"  Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" Content="Bet Low" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Command="{Binding BetLowCommand}"/>
    <ToggleButton IsChecked="{Binding HighChecked}" IsVisible="{Binding ShowToggle}" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Content="Bet High" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Stretch" Command="{Binding BetHighCommand}"/>
    <ToggleButton IsChecked="{Binding LowChecked}" IsVisible="{Binding ShowToggle}" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" Content="Bet Low" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Command="{Binding BetLowCommand}"/>

  </Grid>
</UserControl>
